<?xml version="1.0" encoding="utf-8"?>
<extension version="3.3" type="component" method="upgrade">
    <name>Zt Portfolio</name>
    <creationDate>Mar 2016</creationDate>
    <author>ZooTemplate</author>
    <authorEmail>support@zootemplate.com</authorEmail>
    <authorUrl>http://www.zootemplate.com</authorUrl>
    <copyright>Copyright (c) 2010- 2015 ZooTemplate. All rights reserved.</copyright>
    <license>GNU General Public License version 2</license>
    <version>1.2</version>
    <description>Zt Portfolio Component for Joomla 3.x</description>

    <files>
        <filename>ztportfolio.xml</filename>
        <filename>ztportfolio.php</filename>
        <filename>router.php</filename>
        <filename>dispatcher.php</filename>
        <folder>assets</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>models</folder>
        <folder>views</folder>
    </files>

    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.com_ztportfolio.ini</language>
        <language tag="en-GB">en-GB/en-GB.com_ztportfolio.sys.ini</language>
    </languages>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">admin/sql/install/mysql/install.sql</file>
            <file driver="mysql">admin/sql/install/mysql/install.sql</file>

            <file driver="mysqli" charset="utf8">admin/sql/install/mysql/install.sql</file>
            <file driver="mysqli">admin/sql/install/mysql/install.sql</file>
        </sql>
    </install>

    <administration>
        <menu view="cpanel">COM_ZTPORTFOLIO</menu>

        <files folder="admin">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>ztportfolio.php</filename>
            <filename>fof.xml</filename>
            <filename>toolbar.php</filename>
            
            <folder>sql</folder>
            <folder>assets</folder>
            <folder>tables</folder>
            <folder>fields</folder>
            <folder>models</folder>
            <folder>controllers</folder>
            <folder>views</folder>
            <folder>helpers</folder>
        </files>

        <languages folder="admin/language">
            <language tag="en-GB">en-GB/en-GB.com_ztportfolio.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_ztportfolio.sys.ini</language>
        </languages>
    </administration>
	
</extension>
